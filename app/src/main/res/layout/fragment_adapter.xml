<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_hole_radius"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Hole radius:"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_hole_radius"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_hole_radius"
        android:inputType="number" />

    <TextView
        android:id="@+id/tv_square_width"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Square width:"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/tv_hole_radius"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_square_width"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_hole_radius"
        app:layout_constraintStart_toEndOf="@id/tv_square_width"
        android:inputType="number" />

    <TextView
        android:id="@+id/tv_fits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_check_fits"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/btn_check_fits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check fits"
        app:layout_constraintTop_toBottomOf="@id/tv_fits"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>